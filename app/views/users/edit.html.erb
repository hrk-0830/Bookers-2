<div class ="container">
  <div class ="row text-left">
    <div class ="col-sm-12 col-md-8 mx-auto">
      <h1>Editing</h1>
      <div class ="error_explanation">
        <!--エラー文-->
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
        <%= form_with model: @user do |f| %>
        <div class ="form-group">
          <label for="inputname">Name</label> </br>
          <%= f.text_field :name, autofocus: true, id:"inputname" %>
        </div>
        <div class ="form-group">
          <label for="input">Image</label> </br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class ="form-group">
          <label for="inputintroduction">Introduction</label> </br>
          <%= f.text_area :introduction, autofocus: true, id:"inputintroduction" %>
        </div>
        <div class ="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>