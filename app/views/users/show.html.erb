<div class ="container px-5 px-sm-0">
  <div class ="row">
    <%= render 'sidebar', book: @book, user: @user %>
      <div class ="col-md-8">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= image_tag @user.get_profile_image %> </br>
                  <a href="/books/<%= book.id %>"><%= @user.name %></a>
                </td>
                <td>
                  <a href="/books/<%= book.id %>"><%= book.title %></a>
                </td>
                <td>
                  <%= book.body %>
                </td>
                <td>
                </td>
              </tr>
            <% end %>
          </table>
      </div>
  </div>
</div>