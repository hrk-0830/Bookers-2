 <div class ="col-md-3">
      <!--ここからユーザ情報-->
      <!--あとで-->
      <h2>User info</h2>
      <%= image_tag user.get_profile_image %> </br>
      <table class ="table">
        <tr>
          <th>Name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>
      <div class ="row">
        <a class="btn btn-outline-secondary btn-block" href ="/users/<%= user.id %>/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <!--ここから投稿フォーム-->
      <h2>New book</h2>
      <%= form_with model: book do |f| %>
          <div class ="form-group">
            <label>Title</label> </br>
            <%= f.text_field :title %>
          </div>
          <div class ="form-group">
            <label>Opinion</label> </br>
            <%= f.text_area :body %>
          </div>
          <div class ="form-group">
            <%= f.submit 'Create Book', class: "btn btn-secondary" %>
          </div>
      <% end %>
    </div>