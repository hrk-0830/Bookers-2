<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
      <!--ここからユーザ情報-->
      <!--あとで-->
      <h2>User info</h2>
      <table class ="table">
        <tr>
          <th></th>
        </tr>
        <tr>
          <th></th>
        </tr>
      </table>
      <div class ="row">
        <%= link_to "prof ed", users_path, class: "btn btn-secondary" %>
      </div>
      <!--ここから投稿フォーム-->
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <form>
          <div class ="form-group">
            <label>Title</label> </br>
            <%= f.text_field :title %>
          </div>
          <div class ="form-group">
            <label>Opinion</label> </br>
            <%= f.text_area :body %>
          </div>
          <div class ="form-group">
            <%= f.submit 'Create Book', class: "btn btn-secondary" %>
          </div>
        </form>
      <% end %>
    </div>
    <div class ="col-md-8">
      <h2>Book detail</h2>
      <table>
        <tr>
          <th>
            <%= image_tag @user.get_image %> </br>
            <%= @user.name %>
          </th>
          <th>
            <%= @book.title %>
          </th>  
          <th>
            <%= @book.body %>
          </th>
          <th>
            <%= link_to "Edit", edit_book_path, class: "btn btn-secondary" %>
          </th>
          <th>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-secondary" %>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>