<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
      <!--ここからユーザ情報-->
      <!--あとで-->
      <h2>User info</h2>
      <table class ="table">
        <tr>
          <th></th>
        </tr>
        <tr>
          <th></th>
        </tr>
      </table>
      <div class ="row">
        <%= link_to "prof ed", users_path, class: "btn btn-secondary" %>
      </div>
      <!--ここから投稿フォーム-->
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <form>
          <div class ="form-group">
            <label>Title</label> </br>
            <%= f.text_field :title %>
          </div>
          <div class ="form-group">
            <label>Opinion</label> </br>
            <%= f.text_area :body %>
          </div>
          <div class ="form-group">
            <%= f.submit 'Create Book', class: "btn btn-secondary" %>
          </div>
        </form>
      <% end %>
    </div>
      <div class ="col-md-8">
        <h2>Books</h2>
        <table class ="table table-hover table-inverse">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        <% @books.each do |book| %>
          <tr>
            <th>
              <%= image_tag book.get_image %>
            </th>
            <th>
              <a href ="/books/:id"><%= book.title %></a>
            </th>
            <th>
              <%= book.body %>
            </th>
            <th>
            </th>
          </tr>
        <% end %>
        </table>
      </div>
  </div>
</div>