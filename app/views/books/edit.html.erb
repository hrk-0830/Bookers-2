<div class ="container">
  <div class ="row text-left">
    <div class ="col-sm-12 col-md-8 mx-auto">
      <h1>Editing Book</h1>
      <div class ="error_explanation">
        <!--エラー文-->
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
        <%= form_with model: @book do |f| %>
        <div class ="form-group">
          <label for=inputtitle>Title</label> </br>
          <%= f.text_field :title, autofocus: true, id:"inputtitle" %>
        </div>
        <div class ="form-group">
          <label for=inputbody>Opinion</label> </br>
          <%= f.text_area :body, autofocus: true, id:"inputbody" %>
        </div>
        <div class ="form-group">
          <%= f.submit "Update Book", class: "btn btn-secondary" %>
        </div>
        <% end %>
      <%= link_to "show", book_path %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>