<div class ="container">
  <div class ="row text-center">
    <div class ="col-sm-12 col-md-8 mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
        <div class ="form-group">
          <label for=inputtitle>Title</label> </br>
          <%= f.text_field :title, autofocus: true, id:"inputtitle" %>
        </div>
        <div class ="form-group">
          <label for=inputbody>Opinion</label> </br>
          <%= f.text_area :body, autofocus: true, id:"inputbody" %>
        </div>
        <div class ="form-group">
          <%= f.submit "Update Book", class: "btn btn-secondary" %>
        </div>
        <% end %>
      <%= link_to "show", book_path %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>